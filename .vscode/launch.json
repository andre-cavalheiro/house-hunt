    "version": "0.2.0",
    "configurations": [
        {
            "name": "Module: House Hunt",
            "type": "debugpy",
            "request": "launch",
            "module": "main",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}/src",
        },
        {
            "name": "Module: Push Secrets",
            "type": "debugpy",
            "request": "launch",
            "module": "push_secrets",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/deploy"
            }
        }
    ]
}